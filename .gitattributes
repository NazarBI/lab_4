import os

while True:
    # Запитуємо шлях до файлу від користувача
    file_path = input("Введіть шлях до файлу: ")
    
    # Перевіряємо, чи файл існує
    if not os.path.isfile(file_path):
        print("Файл не знайдено!")
        continue
    
    # Відкриваємо файл
    with open(file_path, 'r') as f:
        # Ініціалізуємо змінні для статистики
        line_count = 0
        empty_line_count = 0
        z_line_count = 0
        z_count = 0
        and_line_count = 0
        
        # Проходимо по рядках файлу
        for line in f:
            line_count += 1
            
            # Перевіряємо, чи рядок порожній
            if line.strip() == '':
                empty_line_count += 1
            
            # Перевіряємо, чи є літера "z" у рядку
            if 'z' in line:
                z_line_count += 1
                z_count += line.count('z')
                
            # Перевіряємо, чи є група символів "and" у рядку
            if 'and' in line:
                and_line_count += 1
                
        # Друкуємо статистику про файл
        print("Кількість рядків: ", line_count)
        print("Кількість порожніх рядків: ", empty_line_count)
        print("Кількість рядків з літерою 'z': ", z_line_count)
        print("Кількість літер 'z' у файлі: ", z_count)
        print("Кількість рядків з групою символів 'and': ", and_line_count)
        
    # Запитуємо користувача, чи потрібно проаналізувати ще один файл
    response = input("Аналізувати ще один файл? (Y/N): ")
    if response.lower() != 'y':
        break